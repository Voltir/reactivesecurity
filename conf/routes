# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                               reactivesecurity.defaults.DefaultLogin.login
POST    /login/:provider                reactivesecurity.defaults.DefaultProviders.authenticateByPost(provider)
GET     /registration/start             reactivesecurity.defaults.DefaultLogin.startRegistration
POST    /registration/start             reactivesecurity.defaults.DefaultLogin.handleStartRegistration
GET     /registration/:uuid             reactivesecurity.defaults.DefaultLogin.registration(uuid: String)
POST    /registration/:uuid             reactivesecurity.defaults.DefaultLogin.handleRegistration(uuid: String)
GET     /index                          controllers.Application.index
GET     /foo                            controllers.Application.foo

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                   controllers.Assets.at(path="/public", file)
