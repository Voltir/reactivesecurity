# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                               controllers.DemoLogin.login
POST    /login/:provider                controllers.DemoProviders.authenticateByPost(provider)
GET     /registration/start             controllers.DemoLogin.startRegistration
POST    /registration/start             controllers.DemoLogin.handleStartRegistration
GET     /registration/:uuid             controllers.DemoLogin.registration(uuid: String)
POST    /registration/:uuid             controllers.DemoLogin.handleRegistration(uuid: String)
GET     /index                          controllers.Application.index
GET     /foo                            controllers.Application.foo

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                   controllers.Assets.at(path="/public", file)
